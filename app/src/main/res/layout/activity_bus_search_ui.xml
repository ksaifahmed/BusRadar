<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BusSearchUI">

    <TextView
        android:id="@+id/bus_search_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/back"
        android:padding="5dp"
        android:textColor="@color/fresh_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <ImageView
        android:layout_width="315dp"
        android:layout_height="110dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/bus_search_choose_bus_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.106" />

    <EditText
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_medium"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="17sp"
        android:hint="@string/search_bus"
        android:background="@drawable/rounded_edittext"
        android:textColor="@color/text_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.289" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/trending_header"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.378" />

    <!-- card: top-left -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.110"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.537"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/trending_bus_1_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/square_img_id1" />

        <TextView
            android:id="@+id/trending_bus_1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="@string/bus_name_default"
            android:textColor="@color/fresh_green"
            android:textSize="13sp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            />
    </LinearLayout>

    <!-- card: top-middle -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.537"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/trending_bus_2_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/square_img_id1" />

        <TextView
            android:id="@+id/trending_bus_2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="@string/bus_name_default"
            android:textColor="@color/fresh_green"
            android:textSize="13sp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            />
    </LinearLayout>

    <!-- card: top-right -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.889"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.537"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/trending_bus_3_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/square_img_id1" />

        <TextView
            android:id="@+id/trending_bus_3_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="@string/bus_name_default"
            android:textColor="@color/fresh_green"
            android:textSize="13sp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            />
    </LinearLayout>



    <!-- card: bottom-left -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.110"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.815"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/trending_bus_4_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/square_img_id1" />

        <TextView
            android:id="@+id/trending_bus_4_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="@string/bus_name_default"
            android:textColor="@color/fresh_green"
            android:textSize="13sp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            />
    </LinearLayout>

    <!-- card: bottom-middle -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.815"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/trending_bus_5_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/square_img_id1" />

        <TextView
            android:id="@+id/trending_bus_5_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="@string/bus_name_default"
            android:textColor="@color/fresh_green"
            android:textSize="13sp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            />
    </LinearLayout>

    <!-- card: bottom-right -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.889"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.815"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/trending_bus_6_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/square_img_id1" />

        <TextView
            android:id="@+id/trending_bus_6_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="@string/bus_name_default"
            android:textColor="@color/fresh_green"
            android:textSize="13sp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            />
    </LinearLayout>


    <!-- static bottom bar-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:src="@drawable/bottom_static_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>